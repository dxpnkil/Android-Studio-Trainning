<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10pt"
        android:layout_marginBottom="10pt"
        android:layout_marginRight="2pt"
        android:layout_marginLeft="2pt"
        android:background="@color/grey1"
        android:gravity="right|center"
        android:textSize="40pt"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btCE"
                android:layout_width="25pt"
                android:layout_height="match_parent"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/grey1"
                android:text="CE"></Button>

            <Button
                android:id="@+id/btC"
                android:text="C"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

            <Button
                android:id="@+id/btBS"
                android:text="BS"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

            <Button
                android:id="@+id/btd"
                android:text="/"
                android:layout_width="25pt"
                android:layout_height="35pt"
                android:textSize="10pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt7"
                android:layout_width="25pt"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/grey2"
                android:text="7"></Button>

            <Button
                android:id="@+id/bt8"
                android:text="8"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey2" ></Button>

            <Button
                android:id="@+id/bt9"
                android:text="9"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey2" ></Button>

            <Button
                android:id="@+id/btm"
                android:text="*"
                android:layout_width="25pt"
                android:layout_height="35pt"
                android:textSize="10pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt4"
                android:layout_width="25pt"
                android:layout_height="match_parent"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/grey2"
                android:text="4"></Button>

            <Button
                android:id="@+id/bt5"
                android:text="5"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey2" ></Button>

            <Button
                android:id="@+id/bt6"
                android:text="6"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey2" ></Button>

            <Button
                android:id="@+id/bts"
                android:text="-"
                android:layout_width="25pt"
                android:layout_height="35pt"
                android:textSize="10pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt1"
                android:layout_width="25pt"
                android:layout_height="match_parent"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/grey2"
                android:text="1"></Button>

            <Button
                android:id="@+id/bt2"
                android:text="2"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey2" ></Button>

            <Button
                android:id="@+id/bt3"
                android:text="3"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey2" ></Button>

            <Button
                android:id="@+id/bta"
                android:text="+"
                android:layout_width="25pt"
                android:layout_height="35pt"
                android:textSize="10pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btas"
                android:layout_width="25pt"
                android:layout_height="match_parent"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/grey1"
                android:text="+/-"></Button>

            <Button
                android:id="@+id/bt0"
                android:text="0"
                android:onClick="numberEvent"
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey2" ></Button>

            <Button
                android:id="@+id/btdot"
                android:text="."
                android:layout_width="25pt"
                android:layout_margin="2pt"
                android:textSize="10pt"
                android:onClick="numberEvent"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

            <Button
                android:id="@+id/bte"
                android:text="="
                android:layout_width="25pt"
                android:layout_height="35pt"
                android:textSize="10pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@color/grey1" ></Button>

        </TableRow>





    </TableLayout>



</LinearLayout>